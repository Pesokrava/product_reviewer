# Application Environment
ENV=development

# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_SHUTDOWN_TIMEOUT=30s

# Docker Port Mappings (host:container)
DB_PORT_EXTERNAL=5434
REDIS_PORT_EXTERNAL=6379
NATS_PORT_EXTERNAL=4222
NATS_MONITOR_PORT_EXTERNAL=8222

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5434
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=product_reviews
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# NATS Configuration
NATS_URL=nats://localhost:4222

# Cache TTL Configuration (in seconds or duration format like 5m, 2h)
CACHE_TTL_PRODUCT_RATING=300s
CACHE_TTL_REVIEWS_LIST=120s
